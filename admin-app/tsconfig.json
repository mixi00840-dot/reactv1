{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "allowJs": false,
    "noEmit": true,
    "incremental": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/lib/*": ["src/lib/*"],
      "@/stores/*": ["src/stores/*"],
      "@/styles/*": ["src/styles/*"]
    },
    "types": ["node"]
  },
  "include": ["next-env.d.ts", "src/**/*", "*.ts", "*.tsx"],
  "exclude": ["node_modules"]
}
